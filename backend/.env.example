# =============================================================================
# USER MANAGEMENT SYSTEM - BACKEND CONFIGURATION
# =============================================================================
# This file contains all environment variables needed for the Laravel backend.
# Copy this file to .env and configure the values for your environment.
#
# SECURITY WARNING: Never commit .env files to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------
APP_NAME="User Management System"
APP_ENV=local                    # Options: local, staging, production
APP_KEY=                         # Generate with: php artisan key:generate
APP_DEBUG=true                   # Set to false in production
APP_URL=http://localhost:8000    # Your application URL

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP Configuration
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12                 # Password hashing rounds (10-12 recommended)

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack               # Options: stack, single, daily, slack, syslog
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug                 # Options: emergency, alert, critical, error, warning, notice, info, debug

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# SQLite (Development - Default)
DB_CONNECTION=sqlite

# MySQL (Production - Recommended)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=user_management_system
# DB_USERNAME=root
# DB_PASSWORD=

# PostgreSQL (Alternative)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=user_management_system
# DB_USERNAME=postgres
# DB_PASSWORD=

# -----------------------------------------------------------------------------
# SESSION CONFIGURATION
# -----------------------------------------------------------------------------
SESSION_DRIVER=database         # Options: file, cookie, database, apc, memcached, redis
SESSION_LIFETIME=120            # Session lifetime in minutes
SESSION_ENCRYPT=true            # Encrypt session data
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false     # Set to true in production with HTTPS
SESSION_HTTP_ONLY=true          # Prevent JavaScript access to session cookies
SESSION_SAME_SITE=lax          # Options: lax, strict, none

# -----------------------------------------------------------------------------
# CACHE CONFIGURATION
# -----------------------------------------------------------------------------
CACHE_STORE=database            # Options: apc, array, database, file, memcached, redis
# CACHE_PREFIX=

# Broadcasting
BROADCAST_CONNECTION=log        # Options: pusher, ably, redis, log, null

# File Storage
FILESYSTEM_DISK=local           # Options: local, public, s3

# Queue Configuration
QUEUE_CONNECTION=database       # Options: sync, database, beanstalkd, sqs, redis

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION (Optional)
# -----------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Memcached Configuration (Optional)
MEMCACHED_HOST=127.0.0.1

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION
# -----------------------------------------------------------------------------
# Development Configuration (Logs emails to storage/logs/laravel.log)
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="admin@usermanagement.local"
MAIL_FROM_NAME="${APP_NAME}"

# Custom Email Configuration
MAIL_SUBJECT_USER_CREDENTIALS="Welcome to User Management System - Your Account Credentials"
MAIL_REPLY_TO_ADDRESS="noreply@usermanagement.local"
MAIL_REPLY_TO_NAME="${APP_NAME} - No Reply"

# Production SMTP Configuration (Uncomment and configure for production)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailtrap.io      # Replace with your SMTP host
# MAIL_PORT=587                   # Common ports: 587 (TLS), 465 (SSL), 25 (unsecured)
# MAIL_USERNAME=your_smtp_username
# MAIL_PASSWORD=your_smtp_password
# MAIL_ENCRYPTION=tls             # Options: tls, ssl, null

# Popular SMTP Providers:
# Gmail: smtp.gmail.com:587 (TLS)
# Outlook: smtp-mail.outlook.com:587 (TLS)
# SendGrid: smtp.sendgrid.net:587 (TLS)
# Mailgun: smtp.mailgun.org:587 (TLS)

# -----------------------------------------------------------------------------
# AWS SERVICES (Optional)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# -----------------------------------------------------------------------------
# FRONTEND INTEGRATION
# -----------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# Frontend URLs (Configure for your deployment)
FRONTEND_URL=http://localhost:3000
PRODUCTION_FRONTEND_URL=https://yourdomain.com
STAGING_FRONTEND_URL=https://staging.yourdomain.com

# Laravel Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost:3000,127.0.0.1:3000
SANCTUM_TOKEN_EXPIRATION=1440   # Token expiration in minutes (24 hours)

# CORS Configuration (handled by Laravel CORS package)
# Add your frontend domains to config/cors.php

# -----------------------------------------------------------------------------
# RATE LIMITING CONFIGURATION
# -----------------------------------------------------------------------------
# Login attempts per minute per IP
THROTTLE_LOGIN_ATTEMPTS=5

# General API requests per minute per user
THROTTLE_API_REQUESTS=60

# Sensitive operations per minute per user (create/update/delete)
THROTTLE_SENSITIVE_OPERATIONS=10

# Global requests per minute per IP
THROTTLE_GLOBAL_REQUESTS=100

# -----------------------------------------------------------------------------
# ADDITIONAL SECURITY SETTINGS
# -----------------------------------------------------------------------------
# Password Requirements (used in validation)
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# User Account Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900            # Account lockout duration in seconds (15 minutes)

# -----------------------------------------------------------------------------
# MONITORING AND DEBUGGING (Optional)
# -----------------------------------------------------------------------------
# Laravel Telescope (Development only)
# TELESCOPE_ENABLED=true

# Sentry Error Tracking (Production)
# SENTRY_LARAVEL_DSN=your_sentry_dsn_here

# New Relic Monitoring (Production)
# NEWRELIC_LICENSE_KEY=your_newrelic_key_here

# -----------------------------------------------------------------------------
# DEPLOYMENT CONFIGURATION
# -----------------------------------------------------------------------------
# Set these values for production deployment
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://yourdomain.com
# SESSION_SECURE_COOKIE=true
# DB_CONNECTION=mysql
# MAIL_MAILER=smtp

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
