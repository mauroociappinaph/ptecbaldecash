# =============================================================================
# USER MANAGEMENT SYSTEM - FRONTEND CONFIGURATION
# =============================================================================
# This file contains all environment variables needed for the Nuxt.js frontend.
# Copy this file to .env and configure the values for your environment.
#
# SECURITY WARNING: Never commit .env files to version control!
# Variables prefixed with NUXT_PUBLIC_ are exposed to the client-side code.
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------
NUXT_PUBLIC_APP_NAME="User Management System"
NUXT_PUBLIC_APP_VERSION="1.0.0"
NUXT_PUBLIC_APP_DESCRIPTION="A comprehensive user management system with role-based access control"

# -----------------------------------------------------------------------------
# ENVIRONMENT CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV="development"          # Options: development, staging, production
NUXT_DEVTOOLS_ENABLED=true     # Enable Nuxt DevTools (development only)

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
# Backend API Base URL (adjust for your backend deployment)
NUXT_PUBLIC_API_BASE="http://localhost:8000/api"

# API Request Configuration
NUXT_PUBLIC_API_TIMEOUT=10000   # API request timeout in milliseconds
NUXT_PUBLIC_API_RETRY_ATTEMPTS=3
NUXT_PUBLIC_API_RETRY_DELAY=1000

# -----------------------------------------------------------------------------
# AUTHENTICATION CONFIGURATION
# -----------------------------------------------------------------------------
# Server-side API secret (NEVER expose to client)
NUXT_API_SECRET="your-secret-key-here-generate-a-secure-random-string"

# Session Configuration
NUXT_SESSION_PASSWORD="your-secure-session-password-minimum-32-characters-long"
NUXT_SESSION_NAME="user-management-session"
NUXT_SESSION_MAX_AGE=86400      # Session max age in seconds (24 hours)

# JWT Configuration (if using JWT tokens)
# NUXT_JWT_SECRET="your-jwt-secret-key"
# NUXT_JWT_EXPIRES_IN="24h"

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# Frontend URL Configuration
NUXT_PUBLIC_FRONTEND_URL="http://localhost:3000"

# CSRF Protection
NUXT_PUBLIC_ENABLE_CSRF=true

# Content Security Policy
NUXT_PUBLIC_CSP_ENABLED=true

# Rate Limiting (client-side)
NUXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NUXT_PUBLIC_RATE_LIMIT_WINDOW=60000

# -----------------------------------------------------------------------------
# UI/UX CONFIGURATION
# -----------------------------------------------------------------------------
# Theme Configuration
NUXT_PUBLIC_DEFAULT_THEME="light"
NUXT_PUBLIC_THEME_STORAGE_KEY="user-management-theme"

# Pagination
NUXT_PUBLIC_DEFAULT_PAGE_SIZE=15
NUXT_PUBLIC_MAX_PAGE_SIZE=100

# Search Configuration
NUXT_PUBLIC_SEARCH_DEBOUNCE_MS=300
NUXT_PUBLIC_MIN_SEARCH_LENGTH=2

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Enable/disable features
NUXT_PUBLIC_ENABLE_USER_REGISTRATION=false
NUXT_PUBLIC_ENABLE_PASSWORD_RESET=false
NUXT_PUBLIC_ENABLE_EMAIL_VERIFICATION=false
NUXT_PUBLIC_ENABLE_TWO_FACTOR_AUTH=false

# Debug Features
NUXT_PUBLIC_ENABLE_DEBUG_LOGGING=true
NUXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# -----------------------------------------------------------------------------
# THIRD-PARTY INTEGRATIONS
# -----------------------------------------------------------------------------
# Analytics (Optional)
# NUXT_PUBLIC_GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"
# NUXT_PUBLIC_MIXPANEL_TOKEN="your_mixpanel_token"

# Error Tracking (Optional)
# NUXT_PUBLIC_SENTRY_DSN="your_sentry_dsn"
# NUXT_PUBLIC_SENTRY_ENVIRONMENT="development"

# Monitoring (Optional)
# NUXT_PUBLIC_HOTJAR_ID="your_hotjar_id"

# -----------------------------------------------------------------------------
# DEVELOPMENT CONFIGURATION
# -----------------------------------------------------------------------------
# Development Tools
NUXT_DEVTOOLS_ENABLED=true
NUXT_PUBLIC_ENABLE_VUE_DEVTOOLS=true

# Hot Module Replacement
NUXT_HMR_PORT=24678
NUXT_HMR_HOST="localhost"

# Build Configuration
NUXT_TELEMETRY_DISABLED=true   # Disable Nuxt telemetry

# -----------------------------------------------------------------------------
# PRODUCTION CONFIGURATION
# -----------------------------------------------------------------------------
# Uncomment and configure these for production deployment:

# NODE_ENV="production"
# NUXT_DEVTOOLS_ENABLED=false
# NUXT_PUBLIC_API_BASE="https://api.yourdomain.com/api"
# NUXT_PUBLIC_FRONTEND_URL="https://yourdomain.com"
# NUXT_PUBLIC_ENABLE_DEBUG_LOGGING=false
# NUXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# -----------------------------------------------------------------------------
# STAGING CONFIGURATION
# -----------------------------------------------------------------------------
# Uncomment and configure these for staging deployment:

# NODE_ENV="staging"
# NUXT_PUBLIC_API_BASE="https://api-staging.yourdomain.com/api"
# NUXT_PUBLIC_FRONTEND_URL="https://staging.yourdomain.com"
# NUXT_PUBLIC_ENABLE_DEBUG_LOGGING=true

# -----------------------------------------------------------------------------
# DOCKER CONFIGURATION (Optional)
# -----------------------------------------------------------------------------
# If using Docker, these variables can be overridden in docker-compose.yml
# NUXT_HOST="0.0.0.0"
# NUXT_PORT=3000

# -----------------------------------------------------------------------------
# PERFORMANCE CONFIGURATION
# -----------------------------------------------------------------------------
# Build Performance
NUXT_EXPERIMENTAL_PAYLOAD_EXTRACTION=false
NUXT_EXPERIMENTAL_INLINE_SSR_STYLES=false

# Runtime Performance
NUXT_PUBLIC_PRELOAD_COMPONENTS=true
NUXT_PUBLIC_LAZY_LOAD_IMAGES=true

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
# Client-side logging levels
NUXT_PUBLIC_LOG_LEVEL="info"   # Options: error, warn, info, debug
NUXT_PUBLIC_CONSOLE_LOG_ENABLED=true

# Server-side logging
NUXT_LOG_LEVEL="info"
NUXT_NITRO_LOG_LEVEL="info"

# =============================================================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# =============================================================================

# DEVELOPMENT EXAMPLE:
# NODE_ENV=development
# NUXT_PUBLIC_API_BASE=http://localhost:8000/api
# NUXT_DEVTOOLS_ENABLED=true
# NUXT_PUBLIC_ENABLE_DEBUG_LOGGING=true

# STAGING EXAMPLE:
# NODE_ENV=staging
# NUXT_PUBLIC_API_BASE=https://api-staging.yourdomain.com/api
# NUXT_PUBLIC_FRONTEND_URL=https://staging.yourdomain.com
# NUXT_DEVTOOLS_ENABLED=false

# PRODUCTION EXAMPLE:
# NODE_ENV=production
# NUXT_PUBLIC_API_BASE=https://api.yourdomain.com/api
# NUXT_PUBLIC_FRONTEND_URL=https://yourdomain.com
# NUXT_DEVTOOLS_ENABLED=false
# NUXT_PUBLIC_ENABLE_DEBUG_LOGGING=false

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Generate secure random strings for secrets (minimum 32 characters)
# 2. Use different secrets for different environments
# 3. Never commit .env files to version control
# 4. Use environment-specific values for URLs and API endpoints
# 5. Disable debug features in production
# 6. Enable security features (CSRF, CSP) in production
# 7. Use HTTPS in production environments
# 8. Regularly rotate secrets and API keys

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
