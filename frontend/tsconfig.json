{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "vueCompilerOptions": {
    "globalTypesPath": "./types/global.d.ts"
  },
  "include": [
    "./.nuxt/types/**/*",
    "./types/**/*",
    "./**/*.vue",
    "./**/*.ts",
    "./**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".output",
    ".nuxt/dist"
  ]
}
